<h1>Contact List</h1>
@if(Model.Count == 0)
{
  <h2>You do not have any Contacts</h2>
}

  @foreach (var contact in Model)
  {
    <li>
      <h3>
        <a href='/contactList/@contact.GetId()'>@contact.GetName()</a>
      </h3>
    </li>
  }
<form action="/contacts_deleted" method="post">
<button type="submit" name="button">Click here to delete all contacts</button>
</form>
<a href="/">Go back Home</a>
<br><br>
<a href="/addContact">Add another Contact</a>
